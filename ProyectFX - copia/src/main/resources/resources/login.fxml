<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.Controller">
    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" alignment="CENTER"/>
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="10" bottom="20" left="10" />
        </padding>
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    <Button text="Login" onAction="#handleLoginButton" style="-fx-font-size: 18px;"/>
</VBox>