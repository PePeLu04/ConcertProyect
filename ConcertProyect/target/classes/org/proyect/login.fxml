<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="287.0" prefWidth="276.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.proyect.Controller.LoginController">
    <children>
        <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Concerts" />
        <Label style="-fx-font-size: 20px;" text="Inicio de sesión" />

        <TextField fx:id="usernameField" maxWidth="200.0" promptText="Usuario" />
        <PasswordField fx:id="passwordField" maxWidth="200.0" promptText="Contraseña" text="1234" />
        <TextField fx:id="dniField" maxWidth="200.0" promptText="DNI" />

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#login" style="-fx-font-size: 16px; -fx-pref-width: 120px;" text="Iniciar sesión" />
            <Button onAction="#createAccount" style="-fx-font-size: 16px; -fx-pref-width: 120px;" text="Crear cuenta" />
        </HBox>
    </children>
</VBox>
